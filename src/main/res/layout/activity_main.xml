<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.erinzhang19980101.busmap1.MainActivity">

    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/mainFloatingMenu"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        fab:fab_addButtonColorNormal="@color/colorPrimary"
        fab:fab_addButtonColorPressed="@color/colorPrimaryDark"
        fab:fab_addButtonPlusIconColor="@color/colorSecondary"

        >

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/bus_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            fab:fab_size="mini"
            fab:fab_colorNormal="#ffffff"
            fab:fab_colorPressed="#7f0000"
            fab:fab_icon="@drawable/bus_button"

            />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/wait_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_size="mini"
            android:layout_marginLeft="296dp"
            android:layout_marginTop="17dp"
            fab:fab_colorNormal="#ffffff"
            fab:fab_colorPressed="#7f0000"
            fab:fab_icon="@drawable/wait_button"

            />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/report_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_icon="@drawable/report_button"
            fab:fab_colorNormal="#ffffff"
            fab:fab_colorPressed="#7f0000"
            fab:fab_size="mini"
            android:layout_marginLeft="296dp"
            android:layout_marginTop="17dp"

            />
    </com.getbase.floatingactionbutton.FloatingActionsMenu>


</RelativeLayout>
